<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/currenttrips_design"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="15dp"
    android:orientation="vertical"
    android:backgroundTint="#CDEFFF"
    app:cardElevation="4dp">
    <GridLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnOrderPreserved="false"
        android:rowCount="2"
        android:columnCount="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="138dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="2dp"
            android:orientation="vertical"
            android:padding="2dp">

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Name"
                android:textColor="@color/purple_500"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/userNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="Phone Number"
                android:textColor="@color/teal_700" />

            <!--Textview for displaying our Course Duration-->
            <TextView
                android:id="@+id/fromAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="From Location"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/toAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="To location"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="Amount"
                android:textColor="@color/black" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="138dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="2dp"
            android:orientation="vertical"
            android:padding="2dp">
        <Button
            android:id="@+id/complete_button_currenttrips"
            android:layout_width="116dp"
            android:layout_height="45dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_gravity="end"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#50AC05"
            android:text="Complete"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/openMap_button_currenttrips"
            android:layout_width="116dp"
            android:layout_height="45dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="end"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#F42E2E"
            android:text="MAP"
            android:textStyle="bold"
            />
        </LinearLayout>
    </GridLayout>
</androidx.cardview.widget.CardView>

