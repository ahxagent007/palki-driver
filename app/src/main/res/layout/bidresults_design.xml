<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bidresults_design"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="6dp"
    android:orientation="vertical"
    android:backgroundTint="#CDEFFF"
    app:cardElevation="4dp">
    <GridLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnOrderPreserved="false"
        android:rowCount="2"
        android:columnCount="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_rowSpan="2"
            android:layout_margin="2dp"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/auctionId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="456464697"
                android:textColor="@color/purple_500"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!--Textview for displaying our Course Duration-->
            <TextView
                android:id="@+id/fromAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="From Location"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/toAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="To location"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="200"
                android:textColor="@color/black" />



        </LinearLayout>


    <Button
        android:id="@+id/confirm_button_bidresult"
        android:layout_width="116dp"
        android:layout_height="45dp"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_gravity="end"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#377702"
        android:text="Confrim"
        />

        <Button
            android:layout_width="116dp"
            android:layout_height="45dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="end"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#C10707"
            android:text="Cancel" />
    </GridLayout>


</androidx.cardview.widget.CardView>

